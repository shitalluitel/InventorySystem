<div class="row">
  <div class="col-md-12">

    <div class="row">
      <div class="col-md-6 pull-right">
        <a class="btn btn-primary pull-right" href="<%= new_purchase_path %>"><span><i class="fa fa-plus fa-fw">&nbsp;</i></span>
          Add Stock</a>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-md-12">

        <table class="table table-hover table-striped">
          <thead>
          <tr class="bg-primary">
            <th>S.N.</th>
            <th>Name</th>
            <th>Item Code</th>
            <th>Item Group</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Unit Price</th>
            <th>Estimated Sell Price</th>
            <th>Action</th>
          </tr>
          </thead>

          <tbody>
          <% @show.each_with_index do |f, i| %>
              <tr>
                <td><%= (@page.to_i - 1) * @perpage+ i+1 %></td>
                <td>
                  <%= f.item.name %>
                </td>

                <td>
                  <%= f.item.item_code %>
                </td>

                <td>
                  <%= f.item.item_group.name %>
                </td>

                <td>
                  <%= f.quantity %>
                </td>

                <td>
                  <%= f.item.unit.name   %>
                </td>

                <td>
                  <%= f.unit_price %>
                </td>

                <td>
                  <%= f.est_sell_price %>
                </td>

                <td>
                  <a data-confirm="Are you sure to delete" rel="nofollow" data-toggle="Delete Fiscal Year" data-method="delete" href="<%= item_path(f) %>">
                    <span>
                      <i class="fa fa-trash text-danger fa-th-large fa-2x"></i>
                    </span>
                  </a>


                </td>

              </tr>
          <% end %>
          </tbody>

        </table>

      </div>
    </div>

    <%= will_paginate @show, renderer: BootstrapPagination::Rails %>

  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>