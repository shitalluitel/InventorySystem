
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% if @item_group.errors.any? %>
            <div class="alert alert-error">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              <ul>
                <% @item_group.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
    </div>


    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well tt-modal">
          <%= form_for (@item_group) do |f| %>
              <div class="form-horizontal">
                <div class="form-group">
                  <label class="col-md-3 control-label">Name <strong class="text-danger"> * </strong></label>
                  <div class="control-label col-md-9">
                    <%= f.text_field :name, :class => "form-control", :placeholder => "e.g. Snacks" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label">Parent Name <strong class="text-danger"> *</strong></label>
                  <div class="control-label col-md-9">
                    <%= f.collection_select :parent_id, ItemGroup.order(:name), :id, :name, {prompt: "Select Item Group"}, {class: "form-control selectbox"} %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label">Description<strong class="text-danger"> *</strong></label>
                  <div class="control-label col-md-9">
                    <%= f.text_area :description, autofocus: true, :class => "form-control", :rows => "3", :style => "resize: none", :placeholder => "Write few words about this item group..." %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-offset-3 col-md-4">
                    <%= f.submit "Submit", :class => "btn btn-primary" %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">

</script>