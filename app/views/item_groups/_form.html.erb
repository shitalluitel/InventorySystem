
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well tt-modal">
          <%= form_for (@item_group) do |f| %>
              <div class="form-horizontal">
                <div class="form-group">
                  <label class="col-md-3 control-label">Name <strong class="text-danger"> * </strong></label>
                  <div class="control-label col-md-9">
                    <%= f.text_field :name, :class => "form-control", :placeholder => "e.g. Snacks" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label">Parent Name <strong class="text-danger"> *</strong></label>
                  <div class="control-label col-md-9">
                    <select class="form-control" name="item_group[parent_id]" id="item_group_parent_id">
                      <option value="">Select course name</option>
                      <% @item_names.each do |item| %>
                          <option value="<%= item.id %>"><%= item.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label">Description<strong class="text-danger"> *</strong></label>
                  <div class="control-label col-md-9">
                    <%= f.text_field :description, :class => "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-offset-3 col-md-4">
                    <%= f.submit "Submit", :class => "btn btn-primary" %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" charset="utf-8">
  $("#item_group_parent_id").val("<%= @item_group.parent_id %>").change();
</script>