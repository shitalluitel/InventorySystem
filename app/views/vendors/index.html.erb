<div class="row">
  <div class="col-md-12">
    <table class="table table-hover ">
      <thead>
      <tr class="bg-primary">
        <th>S.N.</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Action</th>
      </tr>
      </thead>
      <% @vendors.each_with_index do |u, i| %>
          <tbody>
          <tr>
            <td><%= (@page.to_i - 1) * @perpage + i+1 %></td>
            <td>
              <%= u.name %>
            </td>
            <td>
              <%= u.email %>
            </td>
            <td>
              <%= u.address%>
            </td>
            <td>
              <%= u.phone_no%>
            </td>
            <td>
              <a data-toggle="Edit" href="<%= edit_vendor_path(u) %>">
                <span>
                  <i class="fa fa-pencil-square fa-th-large text-primary fa-2x"></i>
                </span>
              </a>
              &nbsp;
              <a data-confirm="Are you sure to delete" rel="nofollow" data-toggle="Delete" data-method="delete" href="<%= vendor_path(u) %>">
                <span>
                  <i class="fa fa-trash text-danger fa-th-large fa-2x"></i>
                </span>
              </a>
            </td>
          </tr>
          </tbody>
      <% end %>
    </table>
  </div>
</div>
<%= will_paginate @vendors, renderer: BootstrapPagination::Rails %>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });
</script>