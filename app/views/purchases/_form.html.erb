<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @purchase.errors.any? %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <ul>
            <% @purchase.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  </div>
</div>

<div class="multiform">
  <div class="row">
    <div class="col-md-12">
      <div class="ui-widget">
        <% @count = 0 %>
        <%= form_for @purchase do |f| %>
            <% @count = f %>
            <div class="row">
              <div class="col-md-12">
                <div class="col-md-6 pull-right">
                  <div class="form-group">
                    <label class="control-label col-md-5 text-right"> Supplier</label>
                    <div class="col-md-7">
                      <%= f.collection_select :vendor_id, Vendor.order(:name), :id, :name, {prompt: "Select Category"}, {class: "form-control selectbox"} %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
            <table class="table table-hover">
              <thead class="bg-primary">
              <tr>
                <th>Particular/Item</th>
                <th>unit</th>
                <th>price</th>
                <th>Action</th>
              </tr>
              </thead>
              <tbody id="add-data">
              <%= f.fields_for :purchase_items do |builder| %>
                  <%= render 'field_fields', f: builder %>
              <% end %>
              </tbody>
            </table>
            <div class="col-xs-6">
              <%= link_to_add_fields "Add a task", f, :purchase_items %>
            </div>
            <div class="col-xs-6">
              <%= f.submit "Create", :class => "btn btn-primary pull-right" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $('.selectbox').select2();
    $('[data-toggle="tooltip"]').tooltip();
  });

  $(document).keypress("b",function (e) {
    if(e.ctrlKey){

    }
  })
</script>
