<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well tt-modal">
          <%= form_for (@unit) do |f| %>
              <div class="form-horizontal">
                <div class="form-group">
                  <label class="col-md-3 control-label">Name <strong class="text-danger"> * </strong></label>
                  <div class="control-label col-md-9">
                    <%= f.text_field :name, :class => "form-control", :placeholder => "e.g. KiloGram" %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-md-3 control-label">Print Name <strong class="text-danger">*</strong></label>
                  <div class="control-label col-md-9">
                    <%= f.text_field :print_name, :class => "form-control", :placeholder => "e.g. Kg" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-offset-3 col-md-4">
                    <%= f.submit "Submit", :class => "btn btn-primary" %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>